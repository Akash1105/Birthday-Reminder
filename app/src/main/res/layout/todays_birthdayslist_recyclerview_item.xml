<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:gravity="center_vertical"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_todays_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:id="@+id/linearlayout_todays_birthday"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:padding="8dp">

            <!--<de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageview_entrypicture"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp" />-->

            <com.rishi.family.customcomponents.customtextviews.MediumWhiteTextView
                android:id="@+id/textview_circular_picture"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/drawable_orange"
                android:gravity="center" />

            <com.rishi.family.customcomponents.customtextviews.SmallRWhiteTextView
                android:id="@+id/textview_entryname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp" />

            <com.rishi.family.customcomponents.customtextviews.XSmallRYellowTextView
                android:id="@+id/textview_entryage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
